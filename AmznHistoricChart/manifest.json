{
  "name": "Historic Price Shopper: Amazon Price Tracking",
  "version": "0.20",
  "manifest_version": 2,
  "description": "Adds Amazon.com historical price graph above the 'Add To Cart' button so you can monitor if it's a good time to buy.",
  "icons": {
    "128": "AmazonIcon128.png",
    "96": "AmazonIcon96.png",
    "64": "AmazonIcon64.png",
    "48": "AmazonIcon48.png",
    "32": "AmazonIcon32.png"
  },
  "background": {
    "scripts": ["jquery-2.1.4.min.js", "lru.js", "amazonfs.js", "background.js"],
	"persistent": false
  },
  "content_scripts": [
    {
      "matches": [
	    "http://www.amazon.com/*",
	    "http://smile.amazon.com/*",
		"http://amazon.com/*",
	    "http://www.amazon.co.uk/*",
		"http://amazon.co.uk/*",
	    "https://www.amazon.com/*",
	    "https://smile.amazon.com/*",
		"https://amazon.com/*",
	    "https://www.amazon.co.uk/*",
		"https://amazon.co.uk/*"
		],
      "js": ["jquery-2.1.4.min.js", "lru.js", "amazonfs.js", "progressbar.js", "amazon.user.js"]
    }
  ],
  "permissions": [
    "http://fakespot.com/",
    "http://*.fakespot.com/",
    "https://fakespot.com/",
    "https://*.fakespot.com/",
    "http://camelcamelcamel.com/",
    "http://*.camelcamelcamel.com/",
    "https://camelcamelcamel.com/",
    "https://*.camelcamelcamel.com/"
  ]
}